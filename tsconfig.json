{
  "compileOnSave": false,
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "incremental": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "CommonJS",
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictBindCallApply": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noUnusedLocals": true,
    "types": [
      "jest"
    ],
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": [
    "dist",
    "**/dist",
    "node_modules",
    "**/node_modules",
    "**/setup-jest.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "types": [
        "node"
      ]
    }
  },
 
  "include": ["src/**/*"]
}
